# editorconfig.org
# Suggested by Idea IDE.
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.css]
# indent_style = tab

[*.java]
# indent_style = tab
#max_line_length = 100

[{*.ant,*.fxml,*.jhm,*.jnlp,*.jrxml,*.pom,*.qrc,*.rng,*.tld,*.wadl,*.wsdd,*.wsdl,*.xjb,*.xml,*.xsd,*.xsl,*.xslt,*.xul}]
# indent_style = tab

[{*.cjs,*.js}]
# indent_style = tab

[{*.har,*.jsb2,*.jsb3,*.json,*.ndjson,.babelrc,.eslintrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
# indent_style = tab

[{*.yaml,*.yml}]
indent_size = 2
